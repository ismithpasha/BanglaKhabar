@{
    ViewBag.Title = "Home Page";
}



<div class="col-sm-4 col-sm-offset-4">

    @if (Html.Raw(TempData["msgAlert"]).ToString() == "N")
    {
        <div class="alert alert-warning alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
            <h4 class="text-center">@Html.Raw(TempData["msgAlertDetails"]).ToString().</h4>
        </div>


    }

    @if (Html.Raw(TempData["msgAlert"]).ToString() == "NotAuthorized")
    {
        <div class="modal hide fade" id="loginModalNotAuthorized" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Login</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>

                    </div>
                    <div class="modal-body">
                        <div class="alert alert-danger alert-dismissable">
                            <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                            <h4 class="text-center">Sorry! You are not an authorized user.</h4>
                        </div><br />

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>



    }
</div>


<main id="main">

    <div class="card-body container">

        <div class="row">
            <h4 class="modal-title">Login</h4>

            <form action="@Url.Action("UserLogin", "Security")" method="post" role="form">
                <div class="form-group">
                    <label for="email">Email or Phone:</label>
                    <input type="text" class="form-control" id="EmailPhone" name="EmailPhone">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="Password" name="Password">
                </div>

                <button type="submit" class="btn btn-default" style="min-width:150px;">Login</button>
            </form>

        </div>
    </div>
           
      


</main>
