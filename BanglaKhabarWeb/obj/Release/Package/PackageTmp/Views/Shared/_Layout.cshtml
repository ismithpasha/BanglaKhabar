    ============================-->
    <section id="topbar" class="d-none d-lg-block">
        <div class="container clearfix">
            <div class="contact-info float-left">
                <i class="fa fa-envelope-o"></i> <a href="mailto:info.banglakhabar@gmail.com">info.banglakhabar@gmail.com</a>
                <i class="fa fa-phone"></i> 01642-273733
