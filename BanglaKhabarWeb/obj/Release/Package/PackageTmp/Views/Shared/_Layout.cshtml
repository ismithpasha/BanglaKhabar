                    <li><a href="#services"><i class="fa fa-list"></i> Menu</a></li>
                    <li><a href="#contact"><i class="fa fa-mail-forward"></i> Contact</a></li>


                    @if (Session["SessionUserEmail"] == null)
                    {
                        <li data-toggle="modal" data-target="#loginModal"> <a href="#"><i class="fa fa-sign-in"></i> Login</a></li>
                        <li data-toggle="modal" data-target="#signupModal"> <a href="#"><i class="fa fa-user-plus"></i> Sign up</a></li>

                    }
                    else
                    {
                        <li class="menu-has-children">
                            <a href="#"><i class="fa fa-user-circle"> </i> @Session["SessionUserFullName"].ToString()</a>
                            <ul>
                                @*   <li class="fa fa-sign-out">@Html.ActionLink("Logout", "Logout", "Security")</li>*@
